<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ddd"
    android:alpha="0.95">

    <TextView
        android:id="@+id/posttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="8/7/2018 at 19:04" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/postcomandphoto"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Jakis has just shared a new photo!"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/posttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Watch me Rocking in Time Sqare starting at 22:00"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="318dp"
        android:layout_marginBottom="-40dp"
        android:orientation="horizontal">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="343dp"
        android:layout_height="318dp"
        android:layout_marginBottom="-40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photoupload"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginBottom="80dp"
            android:visibility="gone"
            app:srcCompat="@drawable/streetart1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/loveit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:onClick="add"
            android:text="Love it!"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dismissPopup"
            android:text="Comment"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Say something..."
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Joy, Jack and 3 others Love it!"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

</LinearLayout>

